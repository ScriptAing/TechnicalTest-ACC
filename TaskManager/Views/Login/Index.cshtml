@model TaskManager.Models.Users

@{
    ViewData["Title"] = "Index";
}

<div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>
                </div>
                <div class="card-body">
                    <h4>Users</h4>
                    <hr />
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    if (ViewBag.LoginStatus != null)
                    {
                        if (ViewBag.LoginStatus == 0)
                        {
                            <div class="alert alert-danger">Invalid login Username or Password</div>
                        }
                    }

                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>
                        <dd>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "username" })
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PasswordHash)
                        </dt>
                        <dd>
                            @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", @placeholder = "password" })
                        </dd>

                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary">
                        </div>
                    </dl>
                }

                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Don't have an account? <a asp-action="Create"> Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
</div>
